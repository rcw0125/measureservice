	<bean id="mssqldataSource2" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close"> 
	    <property name="url" value="${sqlserver2.url}" />
	    <property name="username" value="${sqlserver2.username}" />
	    <property name="password" value="${sqlserver2.password}" />
	    <property name="dbType" value = "sqlserver"/>
	    <property name="initialSize" value="${connection_pools.initial_pool_size}" />
	    <property name="minIdle" value="${connection_pools.min_pool_size}" /> 
	    <property name="maxActive" value="${connection_pools.max_pool_size}" />
	    <property name="maxWait" value="${connection_pools.max_wait_time}" />
	    <property name="poolPreparedStatements" value="${connection_pools.poolPreparedStatements}"/>
	    <property name="maxOpenPreparedStatements" value="${connection_pools.maxOpenPreparedStatements}"/>
	    <property name="timeBetweenEvictionRunsMillis" value="${connection_pools.checkout_timeout}" />
	    <property name="minEvictableIdleTimeMillis" value="${connection_pools.min_evictable_idle_time}" />
	    <property name="validationQuery" value="SELECT 'x'" />
	    <property name="testWhileIdle" value="true" />
	    <property name="testOnBorrow" value="false" />
	    <property name="testOnReturn" value="false" />
	    <property name="filters" value="stat" /> 
	</bean>
	
    <bean id="mssqllobHandler2" lazy-init="true" class="org.springframework.jdbc.support.lob.DefaultLobHandler"/>
    <bean id="mssqlMapClient2" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:/mssql-sql-map-config2.xml"/>
        <property name="dataSource" ref="mssqldataSource2"/>
        <property name="lobHandler" ref="mssqllobHandler2"/>
    </bean>

    <bean id="mssqlExecutor2" class="com.aladdin.dao.ibatis.LimitSqlExecutor">
        <property name="dialect">
            <bean class="com.aladdin.dao.dialect.MSSQL2005Dialect"/>
        </property>
    </bean>

    <bean id="abstractMSSQLBaseDao2" class="com.aladdin.dao.ibatis.AbstractMSSQLBaseDao2" init-method="initialize">
        <property name="dataSource">
            <ref bean="mssqldataSource2"/>
        </property>
        <property name="sqlMapClient">
            <ref bean="mssqlMapClient2"/>
        </property>
        <property name="sqlExecutor">
            <ref bean="mssqlExecutor2"/>
        </property>
    </bean>
</beans>
